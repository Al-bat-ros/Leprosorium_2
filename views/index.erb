<h1>Latest posts:</h1>

   <br/>
<% @posts.each do |post| %>

      <p>
         <%= post['name']%>
         <br/>
         <br/>
         <%= post['content']%> 
         <br/>
         <br/>
         Added at <%= post['created_at']%>
         <br/>
         <br/>
         <a href="/details/<%= post['id']%>">Comments</a>
      </p>

    <hr/>

<% end %>